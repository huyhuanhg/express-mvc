<main class="container">
  <div class="content-todo">
    <div class="add-todo">
      <div class="content-header">
        <div class="header">
          <div class="title">Create Task</div>
          <div class="control-group">
            <div class="btn-wrapper"><button type="second">Cancel</button></div>
            <div class="btn-wrapper"><button>Create</button></div>
          </div>
        </div>
      </div>
    </div>
    <div class="form">
      <form action="/task" method="POST">
        <div class="form-group">
          <label for="task_name_field">Task Name</label>
          <input type="text" name="name" id="task_name_field" autocomplete="off" />
        </div>
        <div class="form-group">
          <label for="task_policy_field">Policy</label>
          <select name="policy" id="task_policy_field">
            <option value="LOW">Low</option>
            <option value="MEDIUM">Medium</option>
            <option value="HIGHT">Hight</option>
            <option value="HIGHEST">Highest</option>
          </select>
        </div>
        <div class="form-group">
          <label for="task_status_field">Status</label>
          <select name="status" id="task_status_field">
            <option value="TODO">To Do</option>
            <option value="INPROGRESS">In Progress</option>
            <option value="DONE">Done</option>
            <option value="PENDING">Pending</option>
            <option value="ABORT">Abort</option>
          </select>
        </div>
        <div class="form-group">
          <label for="task_start_date_field">Start Date</label>
          <input type="text" name="start_date" id="task_start_date_field" />
        </div>
        <div class="form-group">
          <label for="task_due_date_field">Due Date</label>
          <input type="text" name="due_date" id="task_due_date_field" />
        </div>
        <div class="form-group">
          <label for="task_description_field">Description</label>
          <textarea name="description" id="task_description_field" ></textarea>
        </div>
      </form>
    </div>
  </div>
</main>