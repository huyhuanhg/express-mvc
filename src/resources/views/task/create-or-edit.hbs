<section class="main" id="task_form_page">
  <aside>
    <div class="header">
      <div class="title">{{#if task}}Edit{{else}}Create{{/if}} Task</div>
      <div class="control-group">
        <div class="btn-wrapper"><a href="/task" class="btn btn-second">Cancel</a></div>
        <div class="btn-wrapper"><button class="btn" form="form_update_or_create_task" type="submit">Submit</button></div>
      </div>
    </div>
    <article>
      <div class="form-wrapper">
        <form class="form" action="/task" method="POST" id="form_update_or_create_task">
          <div class="form__group">
            <label class="form__label" for="task_name_field">Task Name</label>
            <input
              class="form__control"
              type="text"
              name="name"
              id="task_name_field"
              autocomplete="off"
              value="{{#if olds}}{{{old 'name'}}}{{else}}{{#if task}}{{task.name}}{{/if}}{{/if}}"
            />
            {{#err 'name'}}{{/err}}
          </div>
          <div class="row">
            <div class="col-12">
              <div class="form__group">
                <label class="form__label" for="task_policy_field">Policy</label>
                <select class="form__control" name="policy" id="task_policy_field">
                  {{#each policies}}
                    <option value="{{ @key }}">{{ this }}</option>
                  {{/each}}
                </select>
              </div>
            </div>
            <div class="col-12">
              <div class="form__group">
                <label class="form__label" for="task_status_field">Status</label>
                <select class="form__control" name="status" id="task_status_field">
                  {{#each status}}
                    <option value="{{ @key }}">{{ this }}</option>
                  {{/each}}
                </select>
              </div>
            </div>
          </div>
          {{!-- <div class="form__group">
            <label class="form__label" for="task_assign_field">Assign</label>
            <input class="form__control" type="text" name="assigned_user_id" id="task_assign_field" />
            {{#err 'assigned_user_id'}}{{/err}}
          </div> --}}
          <div class="row">
            <div class="col-12">
              <div class="form__group">
                <label class="form__label" for="task_start_date_field">Start Date</label>
                <input class="form__control" type="datetime-local" name="start_date" id="task_start_date_field" />
              </div>
            </div>
            <div class="col-12">
              <div class="form__group">
                <label class="form__label" for="task_due_date_field">Due Date</label>
                <input class="form__control" type="datetime-local" name="due_date" id="task_due_date_field" />
              </div>
            </div>
          </div>
          <div class="form__group">
            <label class="form__label" for="task_description_field">Description</label>
            <textarea class="form__control rsz-none" name="description" id="task_description_field" rows="8"></textarea>
          </div>
        </form>
      </div>
    </article>
  </aside>
</section>
